# ls
alias l='ls -lF --color=auto'
alias la='ls -laF --color=auto'
alias lt='ls -lt'

alias h="history"

# git
alias gst="git branch --show-current; git status -s"
alias gadd="git add"
alias gpush="git push"
alias gdiff="git diff --color"
alias glg="git log --stat --pretty=format:'%Cblue%h %Cgreen%ar %Cred%an %Creset%s %Cred%d'"

# bundle
alias be="bundler exec "

# ssh
alias ssh-add-normal='ssh-add -D > /dev/null 2>&1; kill -0 ${SSH_AGENT_PID} > /dev/null 2>&1; if [ $? -ne 0 ]; then eval `ssh-agent`; fi; ssh-add ~/.ssh/id_rsa'

alias cache-clear='sudo sh -c "echo 3 >'/proc/sys/vm/drop_caches' && swapoff -a && swapon -a"'
